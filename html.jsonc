    "HTML - Basic Template": {
        "prefix": "HTML - Basic Template",
        "body": [
            "<!DOCTYPE html>",
            "<html lang=\"en\">",
            "",
            "<head>",
                "\t<meta charset=\"UTF-8\">",
                "\t<title>${1:Page Title}</title>",
                "\t<meta name=\"viewport\" content=\"width=device-width,initial-scale=1\">",
                "\t<link rel=\"stylesheet\" href=\"${3:styles.css}\">",
                "\t<script src=\"${4:scripts.js}\"></script>",
            "</head>",
            "",
            "<body>",
                "\t$0",
            "</body>",
            "",
            "</html>"
        ],
        "description": "A boilerplate HTML template."
    }
